{
    "name": "queezy-backend",
    "version": "1.0.0",
    "description": "Real-time quiz game backend with Socket.io, Redis, and Admin Dashboard",
    "main": "dist/index.js",
    "type": "module",
    "engines": {
        "node": ">=20.0.0"
    },
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "postinstall": "prisma generate",
        "lint": "eslint src --ext .ts",
        "typecheck": "tsc --noEmit",
        "db:push": "prisma db push",
        "db:migrate": "prisma migrate dev",
        "db:studio": "prisma studio",
        "db:generate": "prisma generate",
        "db:seed": "tsx prisma/seed.ts",
        "db:reset": "prisma migrate reset --force"
    },
    "prisma": {
        "seed": "tsx prisma/seed.ts"
    },
    "keywords": [
        "quiz",
        "game",
        "socket.io",
        "redis",
        "real-time",
        "claude",
        "anthropic"
    ],
    "author": "Queezy Team",
    "license": "MIT",
    "dependencies": {
        "@anthropic-ai/sdk": "^0.30.0",
        "@prisma/client": "^5.20.0",
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.21.0",
        "ioredis": "^5.4.1",
        "jsonwebtoken": "^9.0.2",
        "multer": "^1.4.5-lts.1",
        "nanoid": "^5.0.7",
        "pino": "^9.4.0",
        "pino-pretty": "^11.2.2",
        "socket.io": "^4.8.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/multer": "^1.4.12",
        "@types/node": "^22.7.0",
        "eslint": "^9.11.0",
        "prisma": "^5.20.0",
        "tsx": "^4.19.1",
        "typescript": "^5.6.2"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}